{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/wmclifford/ai-coding-support/schemas/scaffold-artifact.schema.v0.1.json",
  "title": "Scaffold Artifact v0.1",
  "description": "Schema for .ai/task-artifacts/<TASK-ID>/scaffold.yaml generated by the scaffold pass.",
  "type": "object",
  "required": [
    "task_id",
    "author",
    "created_at",
    "spec_reference",
    "applied_diffs"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "spec_reference": {
      "type": "string"
    },
    "applied_diffs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "file",
          "action",
          "commit_sha",
          "commit_message"
        ],
        "properties": {
          "file": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "enum": [
              "add",
              "modify",
              "delete",
              "rename"
            ]
          },
          "commit_sha": {
            "type": "string"
          },
          "commit_message": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "unresolved_questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "version": {
      "type": "string"
    }
  },
  "additionalProperties": false
}

