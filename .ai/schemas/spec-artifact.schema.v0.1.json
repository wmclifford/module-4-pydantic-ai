{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/wmclifford/ai-coding-support/schemas/spec-artifact.schema.v0.1.json",
  "title": "Spec Artifact v0.1",
  "description": "Schema for .ai/task-artifacts/<TASK-ID>/spec.yaml generated by the spec pass.",
  "type": "object",
  "required": [
    "task_id",
    "author",
    "created_at",
    "acceptance_criteria",
    "branch_plan",
    "planned_diffs"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "acceptance_criteria": {
      "type": "string"
    },
    "branch_plan": {
      "type": "object",
      "required": [
        "branch_name_pattern",
        "initial_branch_name",
        "first_commit_file",
        "first_commit_message"
      ],
      "properties": {
        "branch_name_pattern": {
          "type": "string"
        },
        "initial_branch_name": {
          "type": "string"
        },
        "first_commit_file": {
          "type": "string"
        },
        "first_commit_message": {
          "type": "string"
        }
      }
    },
    "planned_diffs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "file",
          "change",
          "marker",
          "description",
          "justification"
        ],
        "properties": {
          "file": {
            "type": "string"
          },
          "change": {
            "type": "string",
            "enum": [
              "add",
              "modify",
              "delete",
              "rename"
            ]
          },
          "marker": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "justification": {
            "type": "string"
          }
        }
      }
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
