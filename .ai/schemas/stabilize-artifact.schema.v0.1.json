{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/wmclifford/ai-coding-support/schemas/stabilize-artifact.schema.v0.1.json",
  "title": "Stabilize Artifact v0.1",
  "description": "Schema for .ai/task-artifacts/<TASK-ID>/stabilize.yaml generated by the stabilize pass.",
  "type": "object",
  "required": [
    "task_id",
    "author",
    "created_at",
    "spec_reference",
    "applied_commits"
  ],
  "properties": {
    "task_id": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "spec_reference": {
      "type": "string"
    },
    "applied_commits": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "testSummary": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object"
        }
      ]
    },
    "lintSummary": {
      "type": "object"
    },
    "unresolved_questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "version": {
      "type": "string"
    }
  },
  "additionalProperties": false
}

